# ncmpcpp works by having a main playlist being played and a list of playlists.

# ───────────────────────── Main keybinds ─────────────────────────
def_key "<"
  seek_backward
def_key ">"
  seek_forward
def_key "="
  volume_up
def_key "I"
  show_server_info
def_key "R"
  add_random_items
def_key "d"
  delete_playlist_items
  delete_browser_items
  delete_stored_playlist
def_key "p"
  pause
def_key "q"
  quit
def_key "tab"
  next_screen
def_key "u"
  update_database

# Vi keys
def_key "J"
  move_selected_items_down
def_key "K"
  move_selected_items_up
def_key "G"
  move_end
def_key "g"
  move_home
# Movement
def_key "h"
  jump_to_parent_directory
  previous_column
def_key "j"
  scroll_down
def_key "k"
  scroll_up
def_key "l"
  enter_directory

# Arrow keys
def_key "left"
  previous_column
  jump_to_parent_directory
def_key "down"
  scroll_down
def_key "up"
  scroll_up
def_key "right"
  enter_directory

