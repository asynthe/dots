# ───────────────────────── Toggle ─────────────────────────
def_key "z"
  toggle_random
def_key "Z"
  shuffle
def_key "x"
  toggle_single
def_key "X"
  toggle_crossfade
def_key "c"
  toggle_repeat
def_key "v"
  toggle_consume
def_key "b"
  toggle_replay_gain_mode
def_key "B"
  toggle_bitrate_visibility

# ───────────────────────── Views ─────────────────────────
def_key "1"
  show_playlist
def_key "2"
  show_browser
def_key "3"
  show_clock
def_key "4"
  show_help
def_key "5"
  show_playlist_editor

# This messes up ghostty focus right pane.
def_key "ctrl-l"
  dummy
